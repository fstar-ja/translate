module Ex6a

(* Exercise: Write the partition function and prove it total.  *)
// BEGIN: Partition
val partition: ('a -> Tot bool) -> list 'a -> Tot (list 'a * list 'a)
let rec partition f = function
  | [] -> [], []
  | hd::tl ->
     let l1, l2 = partition f tl in
     if f hd
     then hd::l1, l2
     else l1, hd::l2
// END: Partition
